<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SnoozeActivity">

    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="@font/varela_round"
        android:gravity="center"
        android:hint="@string/question_hint"
        android:maxLines="2"
        android:padding="8dp"
        android:text="@string/first_question"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_editor_absoluteY="150dp" />

    <TextView
        android:id="@+id/option1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="@font/varela_round"
        android:gravity="center_horizontal"
        android:text="@string/option1"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/question" />

    <TextView
        android:id="@+id/option2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="@font/varela_round"
        android:gravity="center_horizontal"
        android:text="Mahatma Gandhi"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/option1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/question" />

    <TextView
        android:id="@+id/option3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="@font/varela_round"
        android:gravity="center_horizontal"
        android:text="Dr.B R Ambedkar"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/option1"
        app:layout_constraintRight_toRightOf="@id/option1"
        app:layout_constraintTop_toBottomOf="@id/option1" />

    <TextView
        android:id="@+id/option4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="@font/varela_round"
        android:gravity="center_horizontal"
        android:text="Subash Chandra Bose"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/option2"
        app:layout_constraintRight_toRightOf="@id/option2"
        app:layout_constraintTop_toBottomOf="@id/option2" />

</android.support.constraint.ConstraintLayout>